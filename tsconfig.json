{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es2017",
	  "lib": ["es2017", "dom"],
	  "rootDir": "./src",
	  "outDir": "./dist",
	  "moduleResolution": "node",
	  "sourceRoot": "./src",
	  "types": ["node"],
	  "declaration": true,
	  "removeComments": false,
	  "inlineSources": true,
	  "inlineSourceMap": true,
	  "forceConsistentCasingInFileNames": true,
	  "noImplicitReturns": true,
	  "noImplicitThis": true,
	  "noImplicitAny": true,
	  "importHelpers": true,
	  "strictNullChecks": true,
	  "suppressImplicitAnyIndexErrors": true,
	  "noUnusedLocals": true,
	},
	"exclude": [
		"test/*",
		"dist/*",
		"node_modules/*"
	]
 }
