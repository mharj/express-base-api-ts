{
	"name": "express-base-api-ts",
	"version": "0.0.1",
	"description": "",
	"main": "dist/service.js",
	"dependencies": {
		"cross-env": "^5.2.0",
		"cross-fetch": "^3.0.2",
		"express": "^4.16.4",
		"source-map-support": "^0.5.12",
		"tslib": "^1.9.3"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/express": "^4.16.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^12.0.0",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"mocha": "^6.1.4",
		"nodemon": "^1.19.0",
		"npm-run-all": "^4.1.5",
		"nyc": "^14.1.0",
		"ts-node": "^8.1.0",
		"tslint": "^5.16.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.4.5"
	},
	"scripts": {
		"ts-watch": "tsc -w",
		"ts-build": "tsc",
		"node-watch": "cross-env NODE_ENV=development nodemon -r source-map-support/register --delay 250 --watch dist ./dist/service.js",
		"dev": "npm-run-all -p ts-watch node-watch",
		"mocha": "mocha",
		"test": "nyc mocha test/*.ts",
		"start": "cross-env NODE_ENV=production node -r source-map-support/register ./dist/service.js",
		"build": "npm run ts-build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mharj/express-base-api-ts.git"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"src"
		],
		"reporter": [
			"text",
			"html"
		],
		"all": true
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mharj/express-base-api-ts/issues"
	},
	"homepage": "https://github.com/mharj/express-base-api-ts#readme"
}
