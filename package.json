{
	"name": "express-base-api-ts",
	"version": "0.0.2",
	"description": "base express ts setup",
	"main": "dist/service.js",
	"engines": {
		"engineStrict": "true",
		"node": ">=12.9.0"
	},
	"dependencies": {
		"@hapi/joi": "^17.1.1",
		"body-parser": "^1.19.0",
		"cross-env": "^7.0.3",
		"cross-fetch": "^3.0.6",
		"express": "^4.17.1",
		"express-joi-validation": "^5.0.0",
		"express-validation": "^3.0.8",
		"joi-extract-type": "^15.0.8",
		"jsonwebtoken": "^8.5.1",
		"log4js": "^6.3.0",
		"mharj-node-variable-util": "0.0.2",
		"source-map-support": "^0.5.19",
		"tslib": "^2.0.3"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/etag": "^1.8.0",
		"@types/express": "^4.17.9",
		"@types/hapi__joi": "^17.1.6",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.20",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"mocha": "^8.2.1",
		"nodemon": "^2.0.6",
		"npm-run-all": "^4.1.5",
		"nyc": "^15.1.0",
		"ts-node": "^9.1.1",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.1.3"
	},
	"scripts": {
		"build": "tsc",
		"dev": "cross-env TS_NODE_FILES=true NODE_ENV=development nodemon",
		"mocha": "mocha",
		"test": "nyc mocha",
		"start": "cross-env NODE_ENV=production node -r source-map-support/register ./dist/service.js"
	},
	"mocha": {
		"exit": true,
		"extension": [
			"ts",
			"js"
		],
		"recursive": true,
		"require": [
			"ts-node/register",
			"source-map-support/register"
		],
		"reporters": [
			"spec",
			"mocha-junit-reporter"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mharj/express-base-api-ts.git"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"src"
		],
		"reporter": [
			"text",
			"html"
		],
		"all": true
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mharj/express-base-api-ts/issues"
	},
	"homepage": "https://github.com/mharj/express-base-api-ts#readme"
}
